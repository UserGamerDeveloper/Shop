                    {
                        case (int)CategoryId.Processor:
                            <div class="parametrs">
                                <span>
                                        Socket
                                    </span>
                                    <span>
                                    @(((Socket)Model.One).ToString())
                                    </span>
                                </div>
                                        <div class="parametrs">
                                            <span>
                                            Power
                                            </span>
