                                            </span>
                                            <span>
                                    @(((TypeMemory)Model.Two).ToString())
                                            </span>
                                        </div>
                                                <div class="parametrs">
                                            <span>
                                                        PinProcessor
                                            </span>
                                            <span>
                                            Model.Three
                                            </span>
                                        </div>
                            break;
                        case (int)CategoryId.Videocard:
                                                        <div class="parametrs">
                                            <span>
                                                        PinVideo
                                            </span>
                                            <span>
                                                @if (Model.One > 0)
                                            {
                                                pin = Model.One.ToString();
                                            }
                                            else
                                    {
                                        pin = "no";
